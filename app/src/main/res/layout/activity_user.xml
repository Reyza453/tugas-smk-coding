<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".User">

    <RelativeLayout
        android:id="@+id/rl_background"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/background_mikrolet_jemursari">

        <AutoCompleteTextView
            android:id="@+id/et_search_user"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/btn_pilihan"
            android:hint="Search Disini"
            android:textColorHint="@color/colorWhite"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_pilihan"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/colorWhite"
            android:src="@drawable/menu2"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/img_becak_user"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@id/rl_background"
        android:src="@drawable/becak"/>
    <TextView
        android:id="@+id/tv_becak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_becak_user"
        android:text="GetCak"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginLeft="40dp"/>

    <ImageView
        android:id="@+id/img_mikrolet"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/rl_background"
        android:layout_toEndOf="@id/img_becak_user"
        android:layout_toStartOf="@id/img_bus_user"
        android:src="@drawable/mikrolet"/>
    <TextView
        android:id="@+id/tv_mikrolet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_mikrolet"
        android:layout_toRightOf="@id/tv_becak"
        android:text="GetLet"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="70sp"/>
    <ImageView
        android:id="@+id/img_bus_user"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@id/rl_background"
        android:src="@drawable/bus"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:id="@+id/tv_bus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GetBus"
        android:layout_below="@id/img_bus_user"
        android:layout_toEndOf="@id/tv_mikrolet"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginLeft="70dp"/>

    <ImageView
        android:id="@+id/img_becak_deskripsi"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@id/tv_becak"
        android:src="@drawable/becak"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_becak_deskripsi"
        android:layout_below="@id/tv_mikrolet"
        android:text="GetCak dapat anda akses disegala tempat
dan tarif Becakku terbilang murah dan dapat
menampung 2 orang sekaligus"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
    <ImageView
        android:id="@+id/img_mikrolet_deskripsi"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@id/img_becak_deskripsi"
        android:src="@drawable/bemo"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/img_bus_deskripsi"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@id/img_mikrolet_deskripsi"
        android:src="@drawable/bus"
        android:layout_marginTop="30dp"





</RelativeLayout>