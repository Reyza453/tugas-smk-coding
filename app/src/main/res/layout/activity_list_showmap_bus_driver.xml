<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".list_showmap_bus_driver"
    android:background="@drawable/map">

    <ImageView
        android:id="@+id/img_lingkaran_luar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/button_lingakaran" />

    <ImageView
        android:id="@+id/img_lingkaran_dalam"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/lingkaran_putih" />

    <ImageView
        android:id="@+id/img_search"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/search" />

    <ImageView
        android:id="@+id/gambar1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="300dp"
        android:src="@drawable/bus" />

    <ImageView
        android:id="@+id/gambar2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="370dp"
        android:layout_marginTop="310dp"
        android:src="@drawable/bus" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_kembali_showmap_bus"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/colorWhite"
        android:src="@drawable/kembali" />



</RelativeLayout>