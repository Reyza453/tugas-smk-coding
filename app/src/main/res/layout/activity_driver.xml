<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".driver">

    <ImageView
        android:id="@+id/img_becak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/becak"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />
    <ImageView
        android:id="@+id/btn_info_becak"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/info"
        android:layout_toLeftOf="@id/tv_becak"
        android:layout_below="@id/img_becak"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/tv_becak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Becak"
        android:textStyle="bold"
        android:textSize="35sp"
        android:layout_below="@id/img_becak"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/img_mikrolet"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/mikrolet"
        android:layout_toRightOf="@id/img_bus"
        android:layout_below="@id/img_becak"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="10dp"
        />


    <TextView
        android:id="@+id/tv_mikrolet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_mikrolet"
        android:layout_marginLeft="119dp"
        android:layout_marginTop="9dp"
        android:layout_toRightOf="@id/tv_bus"
        android:text="Mikrolet"
        android:textSize="35sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/btn_info_mikrolet"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toLeftOf="@id/tv_mikrolet"
        android:layout_below="@id/img_mikrolet"
        android:src="@drawable/info"
        android:layout_marginRight="-100dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/img_bus"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/img_becak"
        android:src="@drawable/bus"
        android:layout_marginTop="150dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/tv_bus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_mikrolet"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:text="Bus"
        android:textSize="35sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/btn_info_bus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/img_bus"
        android:layout_marginTop="13dp"
        android:layout_marginRight="-50dp"
        android:layout_toLeftOf="@id/tv_bus"
        android:src="@drawable/info" />


</RelativeLayout>